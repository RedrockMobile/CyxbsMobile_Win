                                                            <TextBlock Text="{x:Bind Category}" Foreground="DarkGray"/>
                                                        </StackPanel>
                                                    </StackPanel>
                                                    <TextBlock Text="{x:Bind created_at}" HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Row="0" Foreground="DarkGray" Margin="0,0,20,0"/>
