        <ScrollViewer Name="EditRemindScrollViewer" Grid.Row="1">
            <StackPanel>
                <Grid Name="TitleGrid" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="标题" Foreground="#747474" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center" />
                    <TextBox Name="TitleTextBox" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Style="{StaticResource EditRemindTextBox}"/>
                </Grid>
                <Grid Name="ContentGrid" Margin="15">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="内容" Foreground="#747474" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Top"/>
                    <TextBox Name="ContentTextBox" Grid.Column="1" HorizontalAlignment="Stretch" VerticalAlignment="Center" Height="150" Style="{StaticResource EditRemindTextBox}"/>
                </Grid>
                <Grid Name="RemindTimeGrid" Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="时间" Foreground="#747474" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Name="TimeGridButton" HorizontalAlignment="Stretch" Height="70" VerticalAlignment="Stretch" Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="#F6F6F6" Tapped="TimeGridButton_Tapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions> 
                        <Rectangle Fill="White" Opacity="0"/><!--填充grid-->
                        <TextBlock Name="SelectedTimeTextBlock" Text="{Binding SelTimeString,Mode=OneWay}" Foreground="#747474" TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Right"  Grid.Column="0"/>

                        <FontIcon FontFamily="Segoe MDL2 Assets" Grid.Column="1" Glyph="&#xE00F;" Foreground="#47A7FE" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                    </Grid>
                </Grid>
                <Grid Name="WeekNumGrid" Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="周数" Foreground="#747474" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Name="WeekNumGridButton" HorizontalAlignment="Stretch" Height="70" VerticalAlignment="Stretch" Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="#F6F6F6" Tapped="WeekNumGridButton_Tapped">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Rectangle Fill="White" Opacity="0"/> <!--填充grid-->
                        <TextBlock Name="SelectedWeekNumTextBlock" Text="{Binding WeekNumString,Mode=OneWay,Converter={StaticResource AddRmindShowWeekNum}}" Foreground="#747474" TextAlignment="Right" VerticalAlignment="Center" HorizontalAlignment="Right"  Grid.Column="0"/>

                        <FontIcon FontFamily="Segoe MDL2 Assets" Grid.Column="1" Glyph="&#xE00F;" Foreground="#47A7FE" HorizontalAlignment="Right" VerticalAlignment="Center" />
                    </Grid>
                </Grid>
                <Grid Name="RemindGrid" Margin="15,0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="提醒" Foreground="#747474" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <Grid Name="RemindGridButon" HorizontalAlignment="Stretch" Height="70" VerticalAlignment="Stretch" Grid.Column="1" BorderThickness="0,0,0,1" BorderBrush="#F6F6F6" Tapped="RemindGridButon_Tapped">
