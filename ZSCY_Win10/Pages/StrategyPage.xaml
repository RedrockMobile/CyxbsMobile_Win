            </Pivot>
        </Grid>
        <Grid x:Name="back_background" Background="Black" Grid.Row="0" Grid.RowSpan="2" Opacity="0.5" Visibility="Collapsed"></Grid>
        <Popup x:Name="image_popup" Grid.Row="0" Grid.RowSpan="2" IsLightDismissEnabled="True" Closed="image_popup_Closed" IsOpen="False">
            <Popup.Child>
                <ScrollViewer Name="bigimage_sc" Tapped="bigImage_Tapped" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" VerticalScrollMode="Enabled" HorizontalScrollMode="Enabled" ZoomMode="Enabled" MaxZoomFactor="4">
                    <Grid HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding Page_Height}" Width="{Binding Page_Width}">
                        <Rectangle x:Name="bigImage" PointerExited="bigImage_PointerExited" PointerMoved="bigImage_PointerMoved" PointerPressed="bigImage_PointerPressed" PointerReleased="bigImage_PointerReleased" HorizontalAlignment="Center" VerticalAlignment="Center" Height="{Binding Photo_Height}" Width="{Binding Photo_Width}" Stroke="{Binding Source={StaticResource APPTheme},Path=Gary_Color_Brush}" StrokeThickness="2">
                            <Rectangle.Fill>
                                <ImageBrush x:Name="bigImageBrush" Stretch="UniformToFill"></ImageBrush>
                            </Rectangle.Fill>
                        </Rectangle>
                    </Grid>
                </ScrollViewer>
            </Popup.Child>
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Bottom"></PaneThemeTransition>
                </TransitionCollection>
            </Popup.ChildTransitions>
        </Popup>


        <Popup x:Name="imagegroup_popup" Grid.Row="0" Grid.RowSpan="2" IsLightDismissEnabled="True" Closed="imagegroup_popup_Closed" IsOpen="False">
            <Popup.Child>
                <Grid Width="{Binding Page_Width}" Height="{Binding Page_Height}">
                    <FlipView x:Name="imagegroupflipview"  SelectionChanged="imagegroupflipview_SelectionChanged">
                        <FlipView.ItemTemplate>
                            <DataTemplate>
                                <ScrollViewer Tapped="bigImageGroup_Tapped" VerticalScrollBarVisibility="Hidden" HorizontalScrollBarVisibility="Hidden" VerticalScrollMode="Enabled" HorizontalScrollMode="Enabled" ZoomMode="Enabled" MaxZoomFactor="4">
                                    <Image Source="{Binding}" Stretch="Uniform" PointerExited="bigImage_PointerExited" Tapped="bigImage_Tapped" PointerMoved="bigimagegroup_PointerMoved" PointerPressed="bigimagegroup_PointerPressed" PointerReleased="bigImage_PointerReleased" Width="{Binding ActualWidth, ElementName=grid, Mode=OneWay}"></Image>
                                </ScrollViewer>
                            </DataTemplate>
                        </FlipView.ItemTemplate>
                    </FlipView>
                    <ListBox x:Name="dot_listbox" ItemContainerStyle="{StaticResource DotListBoxItemStyle}" SelectionChanged="dot_listbox_SelectionChanged" Background="Transparent" Margin="0,0,0,8" HorizontalAlignment="Center" VerticalAlignment="Bottom">
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <ItemsStackPanel Orientation="Horizontal"/>
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Ellipse Width="10" Height="10" Fill="White"></Ellipse>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Popup.Child>
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Top"></PaneThemeTransition>
                </TransitionCollection>
            </Popup.ChildTransitions>
        </Popup>
    </Grid>
</Page>
