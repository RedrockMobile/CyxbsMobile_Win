                    <x:String>寻物启事</x:String>
                </ComboBox>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <AppBarButton x:Name="LostAndFoundPageAddAppBarButton" Icon="Add" Foreground="White" Click="LostAndFoundPageAddAppBarButton_Click"/>
                    <AppBarButton x:Name="LostAndFoundPageRefreshAppBarButton" Icon="Refresh" Foreground="White" Click="LostAndFoundPageRefreshAppBarButton_Click"/>
