                                                            <ColumnDefinition Width="*"/>
                                                            <ColumnDefinition Width="20"/>
                                                        </Grid.ColumnDefinitions>
                                                        <TextBlock Text="{x:Bind pro_description}" Grid.Column="1" HorizontalAlignment="Left" TextWrapping="WrapWholeWords"  MaxLines="5" Foreground="Gray" />
                                                    </Grid>
                                                </Grid>
                                            </DataTemplate>
                                        </ListView.ItemTemplate>
                                    </ListView>
                                    <ProgressRing IsActive="{x:Bind IsProgressRingActive[0],Converter={StaticResource OCBTB},Mode=OneWay}" Height="30" HorizontalAlignment="Center" Grid.Row="1"/>
