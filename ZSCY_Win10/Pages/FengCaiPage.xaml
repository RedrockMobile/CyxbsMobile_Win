                            <Ellipse x:Name="detail_img_re" Grid.Row="0" Height="{Binding ElementName=detail_sc,Path=Height}" Width="200" Stroke="{Binding Source={StaticResource APPTheme},Path=Gary_Color_Brush}" StrokeThickness="1">
                                <Ellipse.Fill>
                                    <ImageBrush x:Name="detail_img" Stretch="UniformToFill"></ImageBrush>
                                </Ellipse.Fill>
                            </Ellipse>
                            <ScrollViewer x:Name="detail_sc" Grid.Row="1" VerticalScrollBarVisibility="Hidden" VerticalScrollMode="Enabled">
                                <StackPanel Width="300">
                                    <TextBlock x:Name="detail_title" Grid.Row="1" FontSize="17" Foreground="{Binding Source={StaticResource APPTheme},Path=Content_Header_Color_Brush}" HorizontalAlignment="Center" Margin="0,20,0,15"></TextBlock>
                                    <TextBlock x:Name="detail_content" Foreground="{Binding Source={StaticResource APPTheme},Path=Gary_Color_Brush}" TextWrapping="Wrap"></TextBlock>
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Grid>
                </Grid>
            </Popup.Child>
            <Popup.ChildTransitions>
                <TransitionCollection>
                    <PaneThemeTransition Edge="Bottom"></PaneThemeTransition>
                </TransitionCollection>
            </Popup.ChildTransitions>
        </Popup>
    </Grid>
</Page>
