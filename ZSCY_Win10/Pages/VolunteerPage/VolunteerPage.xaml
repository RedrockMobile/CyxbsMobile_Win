                Duration="0:0:3.5"
                From="#fe8686"
                To="{Binding Source={StaticResource  APPTheme},Path=Backgorund_Color_Brush}"
                EnableDependentAnimation="True"></ColorAnimation>
        </Storyboard>

        <Storyboard x:Name="refresh_Animation2"
                    Duration="0:0:3.5">
